<Window x:Class="pasta5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pasta5"
        mc:Ignorable="d"
        Title="pasta5" Height="180" Width="802" FontSize="10" FontWeight="Bold" FontFamily="Arial Black" VerticalAlignment="Top">
    <StackPanel> 
        <!-- TargetPath -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center">
                path
            </TextBlock>
            <TextBox x:Name="TargetPath" Background="White" Width="628"
                 FontFamily="Lucida Sans Unicode" Text="c:\jogo\pasta"
            />
        </StackPanel>
        <!-- FolderName -->
        <TextBox x:Name="Folder_name" Grid.Row="2" Background="White" Width="728" Height="54" BorderBrush="Black" SelectionBrush="Black"
                 FontSize="24" FontFamily="Lucida Sans Unicode" VerticalAlignment="Top" HorizontalAlignment="Center"
                 PreviewMouseLeftButtonUp="Folder_name_MouseLeftButtonUp" TextChanged="Folder_name_TextChanged"
        />
    </StackPanel>
</Window>
